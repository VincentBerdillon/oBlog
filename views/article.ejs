<%- include("partials/header")%>

  <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
    <div class="pure-g">
      <article class="post pure-u-1">
        <header>
          <h1><%= dataId.title %></h1>
          <div class="post-meta">
            Par <a href="#"><%= dataId.author %></a> 
            dans la catégorie <a href="#"><%= dataId.category %></a>
          </div>
        </header>
        <figure class="post-picture">
          <img class="pure-img" src="images/<%= dataId.img %>" alt="<%= dataId.img_alt %>">
          <figcaption class="post-picture-caption"><%= dataId.sub_title %></figcaption>
        </figure>
        <div class="post-content">
          <p><%= dataId.text %></p>
        </div>
        <footer>
          <a class="pure-button" href="/">Retour à l'accueil</a>
        </footer>
      </article>
    </div>
  </main>

<%- include("partials/footer")%>